{
  "name": "@kosu/monorepo",
  "description": "Monorepo for the Kosu protocol. Includes network client, contracts, and supporting libraries/tooling.",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ParadigmFoundation/kosu-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/ParadigmFoundation/kosu-monorepo/issues"
  },
  "scripts": {
    "clean": "lerna clean -y",
    "clean:install": "yarn clean && yarn",
    "lint": "wsrun --exclude-missing lint",
    "build": "wsrun --exclude-missing --stages build",
    "test": "wsrun --exclude-missing test",
    "test:ci": "wsrun --exclude-missing test:ci",
    "postinstall": "lerna link"
  },
  "workspaces": [
    "packages/kosu.js",
    "packages/kosu-sdk-contracts",
    "packages/kosu-system-contracts",
    "pacakges/tsc-config",
    "packages/tslint-config",
    "packages/dev-images"
  ],
  "dependencies": {
    "lerna": "^3.13.3",
    "wsrun": "^3.6.4"
  },
  "private": true,
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.2"
  }
}
