{
    "extends": "@kosu/tsc-config",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "lib",
        "rootDir": "src",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/index.ts",
        "./src/config/*"
    ]
}