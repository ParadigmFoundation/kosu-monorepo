{
    "extends": "@kosu/tsc-config",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "resolveJsonModule": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "removeComments": false,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@0x/typescript-typings/types"
        ]
    },
    "include": [
        "src/"
    ]
}