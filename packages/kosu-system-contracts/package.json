{
  "name": "@kosu/system-contracts",
  "version": "0.1.0",
  "description": "Kosu protocol core contracts in Solidity.",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ParadigmFoundation/kosu-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/ParadigmFoundation/kosu-monorepo/issues"
  },
  "scripts": {
    "test": "truffle test",
    "build": "truffle compile",
    "contracts:clean": "rm -rf build/contracts",
    "deploy":"yarn deploy:ropsten",
    "deploy:ropsten": "truffle migrate --network ropsten --reset",
    "ganache_rpc": "docker run --rm -p 8545:8545 ${npm_package_config_kosu_ganache_image}",
    "ganache_rpc:detached": "docker run --rm -d -p 8545:8545 ${npm_package_config_kosu_ganache_image}"
  },
  "config": {
    "kosu_ganache_image": "gcr.io/kosu-io/kosu-ganache"
  },
  "dependencies": {
    "@kosu/subcontract-sdk": "0.1.0",
    "openzeppelin-solidity": "2.1.2",
    "safe-node-require": "^1.0.0",
    "web3-eth-abi": "1.0.0-beta.37",
    "web3-utils": "1.0.0-beta.37"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eth-gas-reporter": "^0.1.12",
    "truffle": "5.0.12",
    "truffle-assertions": "^0.7.2",
    "truffle-events": "~0.0.7",
    "truffle-hdwallet-provider": "^1.0.6"
  }
}
