{
    "name": "@kosu/system-contracts",
    "version": "0.1.0-alpha.1",
    "description": "Kosu protocol core contracts in Solidity.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/ParadigmFoundation/kosu-monorepo.git"
    },
    "main": "dist/src/index.js",
    "types": "src",
    "bugs": {
        "url": "https://github.com/ParadigmFoundation/kosu-monorepo/issues"
    },
    "scripts": {
        "test": "ts-mocha -p test/tsconfig.json test/*",
        "test:ci": "ts-mocha -p test/tsconfig.json test/* --timeout 4000 -- geth",
        "coverage": "yarn test -- --timeout 10000 -- runCoverage && istanbul report html && open coverage/index.html",
        "build": "run-s contracts:clean compile:solidity generate_contract_wrappers compile:typescript",
        "compile:solidity": "sol-compiler",
        "compile:typescript": "tsc",
        "lint": "tslint -p .",
        "truffle:clean": "shx rm -rf build/contracts",
        "contracts:clean": "shx rm -rf  generated-artifacts generated-wrappers",
        "deploy": "yarn deploy:ropsten",
        "deploy:ropsten": "ts-node -T src/migrate.ts --rpc-url=https://ethnet.zaidan.io/ropsten",
        "ganache_rpc": "docker run --rm -p 8545:8545 ${npm_package_config_kosu_ganache_image}",
        "ganache_rpc:detached": "docker run --rm -d -p 8545:8545 ${npm_package_config_kosu_ganache_image}",
        "generate_contract_wrappers": "abi-gen --abis  ${npm_package_config_abis} --template ../../node_modules/@0x/abi-gen-templates/contract.handlebars --partials '../../node_modules/@0x/abi-gen-templates/partials/**/*.handlebars' --output generated-wrappers --backend ethers"
    },
    "config": {
        "kosu_ganache_image": "gcr.io/kosu-io/kosu-ganache",
        "test_mnemonic": "plate tag lend tissue capable ketchup evidence deliver aspect salt used always",
        "abis:comment": "This list is auto-generated by contracts-gen. Don't edit manually.",
        "abis": "./generated-artifacts/@(AuthorizedAddresses|EventEmitter|KosuToken|OrderGateway|PosterRegistry|PosterRegistryProxy|Treasury|ValidatorRegistry|ValidatorRegistryProxy|Voting).json"
    },
    "dependencies": {
        "@0x/base-contract": "^5.0.5",
        "@0x/subproviders": "^4.0.5",
        "@0x/utils": "^4.3.1",
        "@0x/web3-wrapper": "^6.0.5",
        "@kosu/subcontract-sdk": "0.1.0-alpha.1",
        "ethereum-types": "^2.1.2",
        "openzeppelin-solidity": "2.1.2",
        "safe-node-require": "^1.0.0",
        "web3": "1.0.0-beta.37",
        "web3-eth-abi": "1.0.0-beta.37",
        "web3-provider-engine": "^15.0.0",
        "web3-utils": "1.0.0-beta.37"
    },
    "devDependencies": {
        "@0x/abi-gen": "^2.0.9",
        "@0x/abi-gen-templates": "^2.0.2",
        "@0x/contracts-gen": "^1.0.8",
        "@0x/contracts-test-utils": "^3.1.2",
        "@0x/dev-utils": "^2.2.2",
        "@0x/sol-compiler": "^3.1.6",
        "@0x/sol-coverage": "^3.0.4",
        "@0x/sol-profiler": "^3.1.6",
        "@0x/sol-trace": "^2.0.12",
        "@babel/core": "^7.4.4",
        "@types/chai-as-promised": "^7.1.0",
        "@types/mocha": "^5.2.6",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "istanbul": "^0.4.5",
        "truffle-hdwallet-provider": "^1.0.6",
        "typescript": "^3.4.5",
        "yargs": "^13.2.2"
    },
    "publishConfig": {
        "access": "public"
    }
}
